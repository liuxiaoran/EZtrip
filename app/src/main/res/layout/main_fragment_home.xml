<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/main_foreground">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/start_place_tv"
            android:layout_marginTop="120dp"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="我在 " />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:layout_below="@id/start_place_tv"
            android:layout_alignLeft="@id/start_place_tv"
            android:id="@+id/destination_tv"
            android:text="想去 " />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="推荐路线" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scrollbars="vertical"
        android:id="@+id/recommand_route_recyclerview" />


</LinearLayout>