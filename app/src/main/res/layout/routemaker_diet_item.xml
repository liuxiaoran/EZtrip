<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spot_item_height">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/item_kind"
        android:src="@drawable/ic_dining"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/item_content"
        android:text="@string/routemaker_spotitem_default"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_change"
        android:src="@drawable/ic_change"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_delete"
        android:layout_toStartOf="@+id/item_delete"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_marginEnd="@dimen/default_padding" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_delete"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_padding"
        android:layout_marginEnd="@dimen/default_padding" />

</RelativeLayout>