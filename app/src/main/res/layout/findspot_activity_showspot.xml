<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:background="#ECECEC">

        <ImageView
        android:id="@+id/showscenery_scenery_iv"
        android:layout_width="match_parent"
            android:layout_height="200dp"
        android:cropToPadding="true"
        android:padding="6dp"
            android:scaleType="centerCrop"
            android:layout_margin="10dp" />


        <TextView
        android:id="@+id/showscenery_title_tv"
            android:textSize="25sp"
        android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:gravity="left|center_vertical"
            android:background="@color/white"
            android:layout_marginTop="20dp" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="1dp"
            app:cardCornerRadius="3dp">

            <ScrollView
            android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/showscenery_intro_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </ScrollView>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="门票" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/showscenery_price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp">

            <TextView
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="地址" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/showscenery_address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="等级" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/showscenery_grade_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="评论人数" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/showscenery_comm_tv"
            android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="10dp"
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <View
            android:id="@+id/showscenery_divider_iv"
            android:layout_width="1dp"
            android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="?android:attr/listDivider" />

            <info.hoang8f.widget.FButton
            android:id="@+id/showscenery_add_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/showscenery_divider_iv"
            android:text="加入"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            fbutton:buttonColor="@color/customize"
            fbutton:shadowColor="@color/fbutton_color_asbestos"
            fbutton:shadowEnabled="false"
            fbutton:cornerRadius="8dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/showscenery_look_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/showscenery_divider_iv"
            android:text="详情"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            fbutton:buttonColor="@color/customize"
            fbutton:shadowColor="@color/fbutton_color_asbestos"
            fbutton:shadowEnabled="false"
            fbutton:cornerRadius="8dp" />

    </RelativeLayout>

</LinearLayout>
</ScrollView>